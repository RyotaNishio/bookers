<p class="notice"><h1>Books</h1></p>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "show", book_path(book.id) %></td>
    <td><%= link_to "edit", edit_book_path(book.id) %></td>
    <td><%= link_to "delete", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>
